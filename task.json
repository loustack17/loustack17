[
  {
    "label": "XeLaTeX Build",
    "command": "latexmk",
    "args": [
      "-xelatex",
      "-synctex=1",
      "-interaction=nonstopmode",
      "$ZED_FILENAME"
    ],
    "cwd": "$ZED_DIRNAME",
    "tags": [
      "latex-build"
    ]
  },
  {
    "label": "Typst Build (Firefox/GitHub Compatible)",
    "command": "bash",
    "args": [
      "-lc",
      "typst compile cv.typ /tmp/resume_typst.pdf --pdf-standard 1.5 --no-pdf-tags && gs -sDEVICE=pdfwrite -dCompatibilityLevel=1.5 -dNOPAUSE -dBATCH -dQUIET -dDetectDuplicateImages=true -dCompressFonts=true -dSubsetFonts=true -dEmbedAllFonts=true -sOutputFile=resume.pdf /tmp/resume_typst.pdf"
    ],
    "cwd": "$ZED_DIRNAME",
    "tags": [
      "typst-build"
    ]
  }
]
