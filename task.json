[
  {
    "label": "XeLaTeX Build",
    "command": "latexmk",
    "args": [
      "-xelatex",
      "-synctex=1",
      "-interaction=nonstopmode",
      "$ZED_FILENAME"
    ],
    "cwd": "$ZED_DIRNAME",
    "tags": [
      "latex-build"
    ]
  },
  {
    "label": "Typst Build (GitHub PDF Compatible)",
    "command": "typst",
    "args": [
      "compile",
      "cv.typ",
      "resume.pdf",
      "--pdf-standard",
      "1.5",
      "--no-pdf-tags"
    ],
    "cwd": "$ZED_DIRNAME",
    "tags": [
      "typst-build"
    ]
  }
]
